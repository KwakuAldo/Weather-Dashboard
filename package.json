{
  "name": "weather-dashboard",
  "version": "1.0.0",
  "description": "A modern weather dashboard built with Tailwind CSS",
  "main": "index.html",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./style.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./style.css --minify",
    "build": "node build.js && npm run build-css-prod",
    "prebuild": "echo 'Building Weather Dashboard...'"
  },
  "keywords": [
    "weather",
    "dashboard",
    "tailwind",
    "javascript"
  ],
  "author": "Aldo",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.18"
  }
}
